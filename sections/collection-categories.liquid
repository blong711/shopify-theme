{%- style -%}
.collection-categories {
  padding: 80px 0;
  overflow: hidden;
}

.collection-categories .container {
  max-width: 1488px;
  margin: 0 auto;
  padding: 0 15px;
}

.wg-cls {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  overflow: hidden;
  border-radius: 8px;
}

.wg-cls.style-abs {
  background: var(--dark);
}

.wg-cls .image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.wg-cls .image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s ease;
}

.wg-cls.hover-img:hover .image img {
  transform: scale(1.1);
}

.cls-btn {
  position: absolute;
  bottom: 30px;
  left: 0;
  width: 100%;
  z-index: 2;
}

.tf-btn.btn-cls {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 12px 30px;
  background: var(--white);
  color: var(--dark);
  font-size: 14px;
  font-weight: 500;
  border-radius: 30px;
  transition: all 0.3s ease;
}

.tf-btn.btn-cls:hover {
  background: var(--dark);
  color: var(--white);
}

.tf-btn.btn-cls i {
  font-size: 20px;
  transition: transform 0.3s ease;
}

.tf-btn.btn-cls:hover i {
  transform: translate(-5px, -5px);
}

.swiper-button-next.nav-swiper,
.swiper-button-prev.nav-swiper {
  width: 50px;
  height: 50px;
  background: var(--white);
  border-radius: 50%;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
  color: var(--dark);
  transition: all 0.3s ease;
}

.swiper-button-next.nav-swiper:hover,
.swiper-button-prev.nav-swiper:hover {
  background: var(--dark);
  color: var(--white);
}

.sw-pagination-cls {
  margin-top: 30px;
}

.sw-pagination-cls .swiper-pagination-bullet {
  width: 10px;
  height: 10px;
  background: var(--line);
  opacity: 1;
  transition: all 0.3s ease;
}

.sw-pagination-cls .swiper-pagination-bullet-active {
  background: var(--dark);
}

.collection-categories__content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24px;
  text-align: center;
}

@media screen and (max-width: 991px) {
  .collection-categories {
    padding-top: 40px;
  }
}
{%- endstyle -%}

<section class="collection-categories">
  <div class="container">
    <div dir="ltr" class="swiper tf-swiper hover-sw-nav">
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="wg-cls style-abs asp-1 hover-img">
              <a href="{{ block.settings.collection.url }}" class="image img-style d-block">
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 600 | image_tag:
                    loading: 'lazy',
                    class: 'lazyload',
                    widths: '300, 400, 600',
                    sizes: '(min-width: 1200px) 33vw, (min-width: 575px) 50vw, 100vw'
                  }}
                {%- else -%}
                  {{ block.settings.collection.featured_image | image_url: width: 600 | image_tag:
                    loading: 'lazy',
                    class: 'lazyload',
                    widths: '300, 400, 600',
                    sizes: '(min-width: 1200px) 33vw, (min-width: 575px) 50vw, 100vw'
                  }}
                {%- endif -%}
              </a>
              <div class="collection-categories__content">
                <a href="{{ block.settings.collection.url }}" class="tf-btn btn-cls btn-white hover-dark hover-icon-2">
                  {{ block.settings.title | default: block.settings.collection.title }}
                  <i class="icon icon-arrow-top-left"></i>
                </a>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
      <div class="d-flex d-xl-none sw-dot-default sw-pagination-cls justify-content-center"></div>
      <div class="d-none d-xl-flex swiper-button-next nav-swiper nav-next-cls"></div>
      <div class="d-none d-xl-flex swiper-button-prev nav-swiper nav-prev-cls"></div>
    </div>
  </div>
</section>

<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer="defer"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    new Swiper('.collection-categories .tf-swiper', {
      slidesPerView: 1,
      spaceBetween: 12,
      speed: 800,
      observer: true,
      observeParents: true,
      slidesPerGroup: 1,
      navigation: {
        nextEl: '.nav-next-cls',
        prevEl: '.nav-prev-cls'
      },
      pagination: {
        el: '.sw-pagination-cls',
        clickable: true
      },
      breakpoints: {
        575: {
          slidesPerView: 2,
          spaceBetween: 12,
          slidesPerGroup: 2
        },
        768: {
          slidesPerView: 3,
          spaceBetween: 12,
          slidesPerGroup: 3
        },
        1200: {
          slidesPerView: 3,
          spaceBetween: 24,
          slidesPerGroup: 3
        }
      }
    });
  });
</script>

