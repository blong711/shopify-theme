                      {{ block.settings.address }}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.phone -%}
                    <div class="item">
                      <span class="box-icon">
                        <svg width="14" height="14" viewBox="0 0 14 14" fill="none"><path d="M11.8125 2.625H2.1875C1.8394 2.625 1.50556 2.76328 1.25942 3.00942C1.01328 3.25556 0.875 3.5894 0.875 3.9375V10.0625C0.875 10.4106 1.01328 10.7444 1.25942 10.9906C1.50556 11.2367 1.8394 11.375 2.1875 11.375H11.8125C12.1606 11.375 12.4944 11.2367 12.7406 10.9906C12.9867 10.7444 13.125 10.4106 13.125 10.0625V3.9375C13.125 3.5894 12.9867 3.25556 12.7406 3.00942C12.4944 2.76328 12.1606 2.625 11.8125 2.625Z" fill="currentColor"/></svg>
                      </span>
                      {{ block.settings.phone }}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.email -%}
                    <div class="item">
                      <span class="box-icon">
                        <svg width="14" height="14" viewBox="0 0 14 14" fill="none"><path d="M11.8125 2.625H2.1875C1.8394 2.625 1.50556 2.76328 1.25942 3.00942C1.01328 3.25556 0.875 3.5894 0.875 3.9375V10.0625C0.875 10.4106 1.01328 10.7444 1.25942 10.9906C1.50556 11.2367 1.8394 11.375 2.1875 11.375H11.8125C12.1606 11.375 12.4944 11.2367 12.7406 10.9906C12.9867 10.7444 13.125 10.4106 13.125 10.0625V3.9375C13.125 3.5894 12.9867 3.25556 12.7406 3.00942C12.4944 2.76328 12.1606 2.625 11.8125 2.625Z" fill="currentColor"/></svg>
                      </span>
                      {{ block.settings.email }}
                    </div>
                  {%- endif -%}
                </div>
                {%- if block.settings.show_map -%}
                  <a href="#" class="tf-btn btn-line-dark fw-normal">
                    <span class="text-sm">See Location</span>
                    <i class="icon-arrow-top-left fs-8"></i>
                  </a>
                {%- endif -%}
              </div>
            {%- when 'newsletter' -%}
              <div class="footer-col-block">
                <div class="footer-heading">{{ block.settings.heading }}</div>
                <div class="footer-newsletter">
                  <p>{{ block.settings.subtext }}</p>
                  {%- form 'customer', class: 'form-newsletter' -%}
                    <div class="subscribe-content">
                      <input type="email" name="contact[email]" class="subscribe-email" placeholder="Email address" required>
                      <button class="subscribe-button" type="submit">
                        <svg width="18" height="18" viewBox="0 0 18 18" fill="none"><path d="M17.7938 8.50229L17.7931 8.50162L14.1192 4.84537C13.8439 4.57147 13.3988 4.57249 13.1248 4.84776C12.8508 5.123 12.8519 5.56818 13.1271 5.84212L15.5938 8.29687H0.703125C0.314789 8.29687 0 8.61166 0 9C0 9.38833 0.314789 9.70312 0.703125 9.70312H15.5938L13.1272 12.1579C12.8519 12.4318 12.8509 12.877 13.1248 13.1522C13.3988 13.4275 13.844 13.4285 14.1192 13.1546L17.7932 9.49837L17.7938 9.4977C18.0692 9.22285 18.0683 8.77623 17.7938 8.50229Z" fill="currentColor"/></svg>
                      </button>
                    </div>
                  {%- endform -%}
                </div>
              </div>
            {%- when 'link_list' -%}
              <div class="footer-col-block">
                <div class="footer-heading">{{ block.settings.heading }}</div>
                {%- if block.settings.menu != blank -%}
                  <ul class="footer-menu-list">
                    {%- for link in block.settings.menu.links -%}
                      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-wrap">
        <p class="text-dark">{{ section.settings.copyright_text }}</p>
        {%- if section.settings.show_payment_icons -%}
          <ul class="tf-payment">
            {%- for type in shop.enabled_payment_types -%}
              <li class="item">{{ type | payment_type_svg_tag: class: 'icon' }}</li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

