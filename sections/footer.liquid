{%- style -%}
/* Root variables for consistent styling */
:root {
  --primary: #2d54a3;
  --secondary: #666666;
  --text: #666666;
  --dark: #0d0d0d;
  --white: #ffffff;
  --line: rgba(0, 0, 0, 0.1);
}

/* Container styles */
.container {
  width: 100%;
  max-width: 1320px;
  margin: 0 auto;
  padding: 0 15px;
}

/* Footer default styles */
.footer-default {
  font-family: "Poppins", sans-serif !important;
  font-size: 16px !important;
  line-height: 24px !important;
  background-color: var(--white);
}

.footer-default a {
  color: var(--text);
  text-decoration: none;
  transition: color 0.3s ease;
}

.footer-default a:hover {
  color: var(--primary);
}

/* Footer top section */
#footer.footer-default .footer-top {
  margin: 0 !important;
  padding: 0 !important;
  width: 100% !important;
  border-top: 1px solid var(--line);
  border-bottom: 1px solid var(--line);
  padding: 40px 0;
}

.footer-default .footer-top-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 15px;
  flex-wrap: wrap;
}

/* Footer logo */
.footer-logo {
  max-width: 157px;
  width: 100%;
}

.footer-logo > a {
  width: 100%;
  display: block;
}

.footer-logo > a img {
  width: 100%;
  height: auto;
}

/* Social icons */
.tf-social-icon.style-large {
  display: flex;
  gap: 8px;
  list-style: none;
  margin: 0;
  padding: 0;
}

.tf-social-icon .social-item {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 1px solid var(--line);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--dark);
  transition: all 0.3s ease;
  background-color: transparent;
}

.tf-social-icon .social-item:hover {
  background-color: var(--primary);
  border-color: var(--primary);
  color: var(--white);
}

/* Footer body section */
#footer.footer-default .footer-body {
  margin: 0 !important;
  padding: 0 !important;
  width: 100% !important;
  padding: 40px 0;
}

.row-footer {
  grid-template-columns: repeat(4, 1fr) !important;
  gap: 30px !important;
}

/* Footer column blocks */
.footer-col-block {
  margin-bottom: 30px;
}

.footer-heading {
  font-size: 20px;
  font-weight: 500;
  margin-bottom: 20px;
  color: var(--dark);
}

/* Footer info items */
.footer-info {
  display: grid;
  gap: 15px;
}

.footer-info .item {
  display: flex;
  align-items: center;
  gap: 10px;
}

.footer-info .box-icon {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 1px solid var(--line);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* Newsletter form */
.form-newsletter {
  max-width: 401px;
}

.form-newsletter .subscribe-button {
  padding: 13px;
  border-radius: 50%;
}

.form-newsletter .subscribe-button .icon {
  font-size: 17px;
}

.subscribe-content {
  position: relative;
  display: flex;
  align-items: center;
}

.subscribe-email {
  width: 100%;
  padding: 12px 50px 12px 20px;
  border: 1px solid var(--line);
  border-radius: 4px;
  background-color: transparent;
}

.subscribe-button {
  position: absolute;
  right: 8px;
  padding: 8px;
  border-radius: 50%;
  background-color: var(--primary);
  border: none;
  color: var(--white);
  cursor: pointer;
  transition: all 0.3s ease;
}

.subscribe-button:hover {
  background-color: var(--dark);
}

/* Footer menu */
.footer-menu-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: grid;
  gap: 15px;
}

.footer-menu-list a {
  color: var(--text);
  text-decoration: none;
  transition: color 0.3s ease;
}

.footer-menu-list a:hover {
  color: var(--primary);
}

/* Footer bottom */
#footer.footer-default .footer-bottom {
  margin: 0 !important;
  padding: 0 !important;
  width: 100% !important;
  border-top: 1px solid var(--line);
}

.footer-bottom-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 32px 0;
  position: relative;
  gap: 15px;
}

.footer-bottom-wrap p,
.footer-bottom-wrap a {
  font-size: 14px;
  line-height: 20px;
}

.tf-payment {
  display: flex;
  gap: 8px;
  align-items: center;
  flex-wrap: wrap;
}

.tf-payment .item {
  max-width: 40px;
}

/* Mobile styles */
@media screen and (max-width: 991px) {
  .row-footer {
    grid-template-columns: repeat(2, 1fr) !important;
  }
  
  .footer-default .footer-contact,
  .footer-default .footer-menu-list,
  .footer-default .footer-newsletter,
  .footer-default .footer-heading {
    margin-bottom: 20px;
  }
}

@media screen and (max-width: 767px) {
  .row-footer {
    grid-template-columns: 1fr !important;
  }
  
  .footer-bottom-wrap {
    flex-direction: column;
    text-align: center;
  }
  
  .footer-heading-mobile {
    display: block;
    position: relative;
    padding-right: 20px;
    line-height: 24px;
    cursor: pointer;
  }
  
  .footer-heading-mobile::after {
    position: absolute;
    content: "";
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    width: 12px;
    height: 1px;
    background-color: var(--dark);
    transition: 0.25s ease-in-out;
  }
  
  .footer-heading-mobile::before {
    position: absolute;
    content: "";
    right: 15px;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 1px;
    height: 12px;
    background-color: var(--dark);
    transition: 0.25s ease-in-out;
  }
  
  .footer-col-block.open .footer-heading-mobile::before {
    opacity: 0;
  }
  
  .footer-col-block.open .footer-heading-mobile::after {
    transform: translate(0%, -50%) rotate(180deg);
  }
  
  .footer-col-block .tf-collapse-content {
    display: none;
  }
  
  .footer-col-block.open .tf-collapse-content {
    display: block;
  }
}
{%- endstyle -%}

