{%- style -%}
/* Root variables for consistent styling */
:root {
  --primary: #2d54a3;
  --text: #666666;
  --dark: #0d0d0d;
  --white: #ffffff;
  --line: rgba(0, 0, 0, 0.1);
}

/* Container styles */
.container {
  max-width: 1320px;
  margin: 0 auto;
  padding: 0 15px;
}

/* Footer top section */
.footer-top {
  border-top: 1px solid var(--line);
  border-bottom: 1px solid var(--line);
  padding: 40px 0;
}

.footer-top-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 15px;
  flex-wrap: wrap;
}

/* Footer logo */
.footer-logo {
  max-width: 157px;
  width: 100%;
}

.footer-logo img {
  width: 100%;
  height: auto;
}

/* Social icons */
.tf-social-icon {
  display: flex;
  gap: 8px;
  list-style: none;
  margin: 0;
  padding: 0;
}

.tf-social-icon .social-item {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 1px solid var(--line);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--dark);
  transition: all 0.3s ease;
}

.tf-social-icon .social-item:hover {
  background-color: var(--primary);
  border-color: var(--primary);
  color: var(--white);
}

/* Footer body section */
.footer-body {
  padding: 60px 0;
}

.row-footer {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30px;
}

/* Footer column blocks */
.footer-col-block {
  margin-bottom: 30px;
}

.footer-heading {
  font-size: 20px;
  font-weight: 500;
  margin-bottom: 20px;
  color: var(--dark);
}

/* Footer info items */
.footer-info {
  display: grid;
  gap: 15px;
}

.footer-info .item {
  display: flex;
  align-items: center;
  gap: 10px;
}

.footer-info .box-icon {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 1px solid var(--line);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* Newsletter form */
.form-newsletter {
  max-width: 401px;
}

.subscribe-content {
  position: relative;
  display: flex;
  align-items: center;
}

.subscribe-email {
  width: 100%;
  padding: 12px 50px 12px 20px;
  border: 1px solid var(--line);
  border-radius: 4px;
}

.subscribe-button {
  position: absolute;
  right: 8px;
  padding: 8px;
  border-radius: 50%;
  background-color: var(--primary);
  border: none;
  color: var(--white);
  cursor: pointer;
}

/* Footer menu */
.footer-menu-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: grid;
  gap: 15px;
}

.footer-menu-list a {
  color: var(--text);
  text-decoration: none;
  transition: color 0.3s ease;
}

.footer-menu-list a:hover {
  color: var(--primary);
}

/* Footer bottom */
.footer-bottom {
  border-top: 1px solid var(--line);
  padding: 32px 0;
}

.footer-bottom-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 15px;
}

.tf-payment {
  display: flex;
  gap: 8px;
  align-items: center;
  list-style: none;
  margin: 0;
  padding: 0;
}

/* Responsive styles */
@media screen and (max-width: 991px) {
  .row-footer {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media screen and (max-width: 767px) {
  .row-footer {
    grid-template-columns: 1fr;
  }
  
  .footer-bottom-wrap {
    flex-direction: column;
    text-align: center;
  }
}
{%- endstyle -%}

<footer id="footer" class="footer-default">
  <div class="footer-top">
    <div class="container">
      <div class="footer-top-wrap">
        <div class="footer-logo">
          {%- if section.settings.logo != blank -%}
            <a href="{{ routes.root_url }}">
              <img src="{{ section.settings.logo | img_url: 'master' }}" class="logo" alt="{{ section.settings.logo.alt | default: shop.name | escape }}">
            </a>
          {%- else -%}
            <a href="{{ routes.root_url }}">{{ shop.name }}</a>
          {%- endif -%}
        </div>
        {%- if section.settings.show_social -%}
          <ul class="tf-social-icon style-large">
            {%- if settings.social_facebook_link != blank -%}
              <li><a href="{{ settings.social_facebook_link }}" class="social-item social-facebook"><i class="icon icon-fb"></i></a></li>
            {%- endif -%}
            {%- if settings.social_instagram_link != blank -%}
              <li><a href="{{ settings.social_instagram_link }}" class="social-item social-instagram"><i class="icon icon-instagram"></i></a></li>
            {%- endif -%}
            {%- if settings.social_snapchat_link != blank -%}
              <li><a href="{{ settings.social_snapchat_link }}" class="social-item social-snapchat"><i class="icon icon-snapchat"></i></a></li>
            {%- endif -%}
            {%- if settings.social_x_link != blank -%}
              <li><a href="{{ settings.social_x_link }}" class="social-item social-x"><i class="icon icon-x"></i></a></li>
            {%- endif -%}
          </ul>
        {%- endif -%}
      </div>
    </div>
  </div>

