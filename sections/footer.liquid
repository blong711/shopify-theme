    <div class="container">
      <div class="row-footer">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'business_contact' -%}
              <div class="footer-col-block">
                <div class="footer-heading">{{ block.settings.heading }}</div>
                <div class="footer-info">
