{% stylesheet %}
.footer {
  padding: 60px 0 30px;
  background-color: rgb(var(--color-background));
}

.footer-block {
  margin-bottom: 30px;
}

.footer-block__heading {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 20px;
  color: rgb(var(--color-foreground));
}

.contact-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15px;
}

.contact-item i {
  margin-right: 10px;
  color: rgb(var(--color-button));
}

.contact-item p {
  margin: 0;
  font-size: 14px;
}

.contact-item a {
  color: rgb(var(--color-foreground));
  text-decoration: none;
  transition: color 0.3s ease;
}

.contact-item a:hover {
  color: rgb(var(--color-button));
}

.newsletter-form {
  margin-top: 20px;
}

.newsletter-form__field-wrapper {
  display: flex;
  gap: 10px;
}

.field {
  flex: 1;
}

.field__input {
  width: 100%;
  padding: 10px 15px;
  border: 1px solid rgb(var(--color-border));
  border-radius: 4px;
  background-color: transparent;
  color: rgb(var(--color-foreground));
}

.newsletter-form__button {
  padding: 10px 20px;
  background-color: rgb(var(--color-button));
  color: rgb(var(--color-button-text));
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.newsletter-form__button:hover {
  background-color: rgb(var(--color-button-hover));
}

.footer__content-bottom {
  margin-top: 40px;
  padding-top: 20px;
  border-top: 1px solid rgb(var(--color-border));
}

.footer__content-bottom-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.copyright__content {
  font-size: 12px;
  color: rgb(var(--color-foreground));
}

.list-payment {
  display: flex;
  gap: 10px;
  list-style: none;
  margin: 0;
  padding: 0;
}

.list-payment__item {
  display: flex;
  align-items: center;
}

@media screen and (max-width: 991px) {
  .footer {
    padding: 40px 0 20px;
  }
  
  .footer-block {
    margin-bottom: 20px;
  }
}
{% endstylesheet %}
