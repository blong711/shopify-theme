<!-- Slider -->
<section class="tf-slideshow {% if section.settings.layout == 'home-electronic' %}slider-electronic{% elsif section.settings.layout == 'fashion-women' %}slider-fashion-3 space-abs-header{% else %}slider-fashion-1{% endif %} slider-default">
    <div class="swiper tf-sw-slideshow slider-effect-fade" data-effect="fade" data-preview="1" data-tablet="1"
        data-mobile="1" data-centered="false" data-space="0" data-space-mb="0" data-loop="{{ section.settings.loop }}"
        data-auto-play="{{ section.settings.autoplay }}" data-speed="{{ section.settings.speed }}">
        <div class="swiper-wrapper">
            {% for block in section.blocks %}
                {% assign slide_class = '' %}
                {% if section.settings.layout == 'home-electronic' and block.settings.image_position == 'right' %}
                    {% assign slide_class = 'type-image-right' %}
                {% elsif section.settings.layout == 'home-electronic' and forloop.index == 2 %}
                    {% assign slide_class = 'reverse-slide' %}
                {% endif %}
                <div class="swiper-slide" {{ block.shopify_attributes }}>
                    {% if section.settings.layout == 'fashion-women' %}
                        <div class="slider-wrap bg-type-{{ forloop.index | plus: 6 }}">
                            <div class="image">
                                {% if block.settings.collection != blank %}
                                    <img src="{{ block.settings.collection.featured_image | img_url: 'master' }}"
                                        data-src="{{ block.settings.collection.featured_image | img_url: 'master' }}" 
                                        alt="{{ block.settings.collection.title | escape }}" 
                                        class="lazyload"
                                        width="{{ block.settings.collection.featured_image.width }}"
                                        height="{{ block.settings.collection.featured_image.height }}">
                                {% endif %}
                            </div>
                            <div class="box-content">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-5 col-md-6 col-sm-7 col-10">
                                            <div class="content-slider style-2 text-center">
                                                <div class="box-title-slider">
                                                    <p class="body-text-2 fw-semibold fade-item fade-item-1 font-2">
                                                        {{ block.settings.subtitle | upcase }}
                                                    </p>
                                                    <div class="heading display-lg-3 fade-item fade-item-2 font-2">
                                                        {{ block.settings.collection.title }}
                                                    </div>
                                                    <p class="sub text-md fade-item fade-item-3 text-main">
                                                        {{ block.settings.description }}
                                                    </p>
                                                </div>
                                                <div class="box-btn-slider fade-item fade-item-4">
                                                    <a href="{{ block.settings.collection.url }}" class="tf-btn animate-btn font-2">
                                                        {{ block.settings.button_text }}
                                                        <i class="icon icon-arr-right"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="slider-wrap bg-type-{{ forloop.index }} {{ slide_class }}">
                            <div class="image">
                                {% if block.settings.image != blank %}
                                    <img src="{{ block.settings.image | img_url: 'master' }}"
                                        data-src="{{ block.settings.image | img_url: 'master' }}" 
                                        alt="{{ block.settings.image.alt | escape }}" 
                                        class="lazyload"
                                        width="{{ block.settings.image.width }}"
                                        height="{{ block.settings.image.height }}">
                                {% endif %}
                            </div>
                            <div class="box-content">
                                <div class="container">
                                    <div class="row">
                                        <div class="{% if section.settings.layout == 'home-electronic' and block.settings.content_position == 'right' %}offset-lg-8 col-lg-4 col-sm-6 offset-6{% else %}col-lg-12 col-sm-6{% endif %} col-12">
                                            <div class="content-slider">
                                                <div class="box-title-slider">
                                                    {% if section.settings.layout == 'home-electronic' %}
                                                        <p class="sub text-md fw-medium fade-item fade-item-1 text-dark-3">
                                                            {{ block.settings.subtitle }}
                                                        </p>
                                                        <h2 class="heading fw-medium fade-item fade-item-2 text-dark-3">
                                                            {{ block.settings.heading }}
                                                        </h2>
                                                    {% else %}
                                                        <h2 class="heading fw-medium fade-item fade-item-1 text-dark-5">
                                                            {{ block.settings.heading }}
                                                        </h2>
                                                        <p class="sub text-md fade-item fade-item-2 text-dark-5">
                                                            {{ block.settings.subheading }}
                                                        </p>
                                                    {% endif %}
                                                </div>
                                                <div class="box-btn-slider fade-item fade-item-3">
                                                    <a href="{{ block.settings.button_link }}" class="tf-btn btn-dark2 animate-btn">
                                                        {{ block.settings.button_text }}
                                                        <i class="icon icon-arr-right"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
        <div class="wrap-pagination">
            <div class="container">
                <div class="sw-dots sw-pagination-slider justify-content-center"></div>
            </div>
        </div>
    </div>
</section>
<!-- /Slider -->

{% schema %}
