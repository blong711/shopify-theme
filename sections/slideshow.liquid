                {
                    "type": "select",
                    "id": "content_position",
                    "label": "Content Position",
                    "options": [
                        { "value": "left", "label": "Left" },
                        { "value": "right", "label": "Right" }
                    ],
                    "default": "left"
                },
                {
                    "type": "text",
                    "id": "subtitle",
                    "label": "Subtitle (Electronic layout)",
