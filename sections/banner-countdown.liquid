{%- style -%}
.banner-countdown {
  padding: 80px 0;
  overflow: hidden;
}

.banner-countdown .container {
  max-width: 1488px;
  margin: 0 auto;
  padding: 0 15px;
}

.s-banner-countdown {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
}

.s-banner-countdown .image {
  position: relative;
  padding-bottom: 35%;
}

.s-banner-countdown .image img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.banner-content {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  text-align: center;
  color: var(--white);
  padding: 30px;
}

.box-title {
  margin-bottom: 30px;
}

.box-title .season {
  font-size: 18px;
  margin-bottom: 15px;
  letter-spacing: 2px;
}

.box-title h2 {
  font-size: 60px;
  margin-bottom: 15px;
  letter-spacing: 2px;
}

.box-title .sub {
  font-size: 18px;
  letter-spacing: 2px;
}

.box-countdown {
  margin-bottom: 30px;
}

.wg-countdown-2 {
  display: flex;
  justify-content: center;
  gap: 30px;
}

.countdown-item {
  text-align: center;
}

.countdown-item .number {
  font-size: 36px;
  font-weight: 500;
  margin-bottom: 5px;
}

.countdown-item .text {
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.tf-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12px 30px;
  border-radius: 30px;
  font-size: 14px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: all 0.3s ease;
}

.btn-white {
  background: var(--white);
  color: var(--dark);
}

.btn-white:hover {
  background: var(--primary);
  color: var(--white);
}

@media screen and (max-width: 991px) {
  .banner-countdown {
    padding: 60px 0;
  }

  .box-title h2 {
    font-size: 48px;
  }

  .box-title .season,
  .box-title .sub {
    font-size: 16px;
  }

  .countdown-item .number {
    font-size: 30px;
  }
}

@media screen and (max-width: 767px) {
  .s-banner-countdown .image {
    padding-bottom: 50%;
  }

  .box-title h2 {
    font-size: 36px;
  }

  .box-title .season,
  .box-title .sub {
    font-size: 14px;
  }

  .countdown-item .number {
    font-size: 24px;
  }

  .wg-countdown-2 {
    gap: 20px;
  }
}
{%- endstyle -%}

<section class="banner-countdown">
  <div class="container">
    <div class="s-banner-countdown banner-cd-fashion">
      <div class="image">
        {%- if section.settings.image contains 'shopify://' -%}
          {%- assign img_url = section.settings.image | replace: 'shopify://', 'https://' -%}
          <img
            src="{{ img_url }}"
            loading="lazy"
            class="lazyload"
            alt="Banner Image"
          >
        {%- else -%}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
      <div class="banner-content text-center">
        <div class="box-title wow fadeInUp">
          <p class="season text-md fw-medium">
            {{ section.settings.season_text }}
          </p>
          <h2 class="fw-medium">
            {{ section.settings.discount_text }}
          </h2>
          <p class="sub text-md fw-medium">
            {{ section.settings.promo_code_text }}
          </p>
        </div>
        <div class="box-countdown d-flex justify-content-center wow fadeInUp">
          <div class="wg-countdown-2">
            <div class="countdown-item">
              <div class="number" data-days>00</div>
              <div class="text">Days</div>
            </div>
            <div class="countdown-item">
              <div class="number" data-hours>00</div>
              <div class="text">Hours</div>
            </div>
            <div class="countdown-item">
              <div class="number" data-minutes>00</div>
              <div class="text">Mins</div>
            </div>
            <div class="countdown-item">
              <div class="number" data-seconds>00</div>
              <div class="text">Secs</div>
            </div>
          </div>
        </div>
        <div class="box-btn wow fadeInUp">
          <a href="{{ section.settings.button_link }}" class="tf-btn btn-white hover-primary">
            {{ section.settings.button_text }}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const endDate = new Date('{{ section.settings.end_date }}').getTime();

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = endDate - now;

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      document.querySelector('[data-days]').textContent = String(days).padStart(2, '0');
      document.querySelector('[data-hours]').textContent = String(hours).padStart(2, '0');
      document.querySelector('[data-minutes]').textContent = String(minutes).padStart(2, '0');
      document.querySelector('[data-seconds]').textContent = String(seconds).padStart(2, '0');

      if (distance < 0) {
        clearInterval(countdownInterval);
        document.querySelector('.box-countdown').style.display = 'none';
      }
    }

    const countdownInterval = setInterval(updateCountdown, 1000);
    updateCountdown();
  });
</script>

