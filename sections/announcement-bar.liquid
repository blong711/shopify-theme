{{ 'section-announcement-bar.css' | asset_url | stylesheet_tag }}

<div class="announcement-bar" role="region" aria-label="{{ 'sections.header.announcement' | t }}">
  <div class="page-width">
    <div class="announcement-bar__wrapper">
      <div class="announcement-bar__social">
        <ul class="social-icons">
          {%- if settings.social_facebook_link != blank -%}
            <li><a href="{{ settings.social_facebook_link }}" class="social-item social-facebook"><i class="icon icon-fb"></i></a></li>
          {%- endif -%}
          {%- if settings.social_instagram_link != blank -%}
            <li><a href="{{ settings.social_instagram_link }}" class="social-item social-instagram"><i class="icon icon-instagram"></i></a></li>
          {%- endif -%}
          {%- if settings.social_twitter_link != blank -%}
            <li><a href="{{ settings.social_twitter_link }}" class="social-item social-x"><i class="icon icon-x"></i></a></li>
          {%- endif -%}
          {%- if settings.social_snapchat_link != blank -%}
            <li><a href="{{ settings.social_snapchat_link }}" class="social-item social-snapchat"><i class="icon icon-snapchat"></i></a></li>
          {%- endif -%}
        </ul>
      </div>

      <div class="announcement-bar__center">
        <div class="marquee-wrapper">
          <div class="initial-child-container">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'announcement' -%}
                  <div class="marquee-child-item" {{ block.shopify_attributes }}>
                    <p>{{ block.settings.text | escape }}</p>
                  </div>
                  {%- unless forloop.last -%}
                    <div class="marquee-child-item"><span class="dot"></span></div>
                  {%- endunless -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>

      <div class="announcement-bar__right">
        <div class="language-selector">
          <select class="language-select">
            <option value="en">English</option>
            <option value="ar">العربية</option>
            <option value="zh">简体中文</option>
            <option value="ur">اردو</option>
          </select>
        </div>
        <div class="currency-selector">
          <select class="currency-select">
            <option value="USD">USD ($)</option>
            <option value="EUR">EUR (€)</option>
            <option value="GBP">GBP (£)</option>
            <option value="JPY">JPY (¥)</option>
          </select>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.announcement-bar {
  background-color: var(--color-background);
  padding: 10px 0;
}

.announcement-bar__wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.announcement-bar__social {
  display: none;
}

@media screen and (min-width: 1200px) {
  .announcement-bar__social {
    display: block;
  }
}

.social-icons {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
  gap: 15px;
}

.social-item {
  color: var(--color-foreground);
  transition: color 0.3s ease;
}

.social-item:hover {
  color: var(--color-button);
}

.announcement-bar__center {
  flex: 1;
  text-align: center;
  overflow: hidden;
}

.marquee-wrapper {
  position: relative;
  overflow: hidden;
}

.initial-child-container {
  display: flex;
  animation: marquee 20s linear infinite;
}

.marquee-child-item {
  display: flex;
  align-items: center;
  white-space: nowrap;
  padding: 0 15px;
}

.dot {
  width: 4px;
  height: 4px;
  background-color: var(--color-foreground);
  border-radius: 50%;
  margin: 0 15px;
}

.announcement-bar__right {
  display: none;
}

@media screen and (min-width: 1200px) {
  .announcement-bar__right {
    display: flex;
    gap: 15px;
  }
}

.language-select,
.currency-select {
  background: transparent;
  border: none;
  color: var(--color-foreground);
  cursor: pointer;
  padding: 5px;
}

@keyframes marquee {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}
</style>

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement",
        "settings": {
          "text": "Return extended to 60 days"
        }
      },
      {
        "type": "announcement",
        "settings": {
          "text": "Life-time Guarantees"
        }
      },
      {
        "type": "announcement",
        "settings": {
          "text": "Limited-Time Offer"
        }
      }
    ]
  }
}
{% endschema %} 