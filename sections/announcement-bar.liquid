{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign social_icons = false
  endif
  if section.settings.enable_country_selector or section.settings.enable_language_selector
    assign language_country_selector = true
  endif
  if section.blocks.size > 0
    assign announcement_bar = true
  endif
-%}

{% if social_icons %}
  {{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{% endif %}

{%- if section.settings.announcement_text != blank -%}
  <div class="announcement-bar color-{{ section.settings.color_scheme }}" role="region" aria-label="{{ 'sections.header.announcement' | t }}">
    <div class="page-width">
      <div class="announcement-bar__message h5">
        {%- if section.settings.announcement_link != blank -%}
          <a href="{{ section.settings.announcement_link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
        {%- endif -%}
            <p class="announcement-bar__message h5">
              {{ section.settings.announcement_text | escape }}
            </p>
        {%- if section.settings.announcement_link != blank -%}
            {% render 'icon-arrow' %}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}

<div
  class="utility-bar color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator and section.blocks.size > 0 %} utility-bar--bottom-border{% elsif section.settings.show_line_separator and section.settings.show_social and social_icons%} utility-bar--bottom-border-social-only{% endif %}{% if section.settings.enable_country_selector or section.settings.enable_language_selector %} header-localization{% endif %}"
>
  <div class="page-width utility-bar__grid{% if announcement_bar and language_country_selector or section.settings.show_social and social_icons %} utility-bar__grid--3-col{% elsif language_country_selector or section.settings.show_social and social_icons %} utility-bar__grid--2-col{% endif %}">
    {%- if section.settings.show_social and social_icons -%}
      {%- render 'social-icons' -%}
    {%- endif -%}
    {%- if section.blocks.size == 1 -%}
      <div
        class="announcement-bar{% if section.settings.show_social %} announcement-bar--one-announcement{% endif %}"
        role="region"
        aria-label="{{ 'sections.header.announcement' | t }}"
        {{ section.blocks.first.shopify_attributes }}
      >
        {%- if section.blocks.first.settings.text != blank -%}
          {%- if section.blocks.first.settings.link != blank -%}
            <a
              href="{{ section.blocks.first.settings.link }}"
              class="announcement-bar__link link link--text focus-inset animate-arrow"
            >
          {%- endif -%}
          <p class="announcement-bar__message h5">
            <span>{{ section.blocks.first.settings.text | escape }}</span>
            {%- if section.blocks.first.settings.link != blank -%}
              {{- 'icon-arrow.svg' | inline_asset_content -}}
            {%- endif -%}
          </p>
          {%- if section.blocks.first.settings.link != blank -%}
            </a>
          {%- endif -%}
        {%- endif -%}
      </div>
    {%- elsif section.blocks.size > 1 -%}
      <slideshow-component
        class="announcement-bar"
        role="region"
        aria-roledescription="{{ 'sections.announcements.carousel' | t }}"
        aria-label="{{ 'sections.announcements.announcement_bar' | t }}"
      >
        <div class="announcement-bar-slider slider-buttons">
          <button
            type="button"
            class="slider-button slider-button--prev"
            name="previous"
            aria-label="{{ 'sections.announcements.previous_announcement' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
          <div
            class="grid grid--1-col slider slider--everywhere"
            id="Slider-{{ section.id }}"
            aria-live="polite"
            aria-atomic="true"
            data-autoplay="{{ section.settings.auto_rotate }}"
            data-speed="{{ section.settings.change_slides_speed }}"
          >
            {%- for block in section.blocks -%}
              <div
                class="slideshow__slide slider__slide grid__item grid--1-col"
                id="Slide-{{ section.id }}-{{ forloop.index }}"
                {{ block.shopify_attributes }}
                role="group"
                aria-roledescription="{{ 'sections.announcements.announcement' | t }}"
                aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                tabindex="-1"
              >
                <div
                  class="announcement-bar__announcement"
                  role="region"
                  aria-label="{{ 'sections.header.announcement' | t }}"
                >
                  {%- if block.settings.text != blank -%}
                    {%- if block.settings.link != blank -%}
                      <a
                        href="{{ block.settings.link }}"
                        class="announcement-bar__link link link--text focus-inset animate-arrow"
                      >
                    {%- endif -%}
                    <p class="announcement-bar__message h5">
                      <span>{{ block.settings.text | escape }}</span>
                      {%- if block.settings.link != blank -%}
                        {{- 'icon-arrow.svg' | inline_asset_content -}}
                      {%- endif -%}
                    </p>
                    {%- if block.settings.link != blank -%}
                      </a>
                    {%- endif -%}
                  {%- endif -%}
                </div>
              </div>
            {%- endfor -%}
          </div>
          <button
            type="button"
            class="slider-button slider-button--next"
            name="next"
            aria-label="{{ 'sections.announcements.next_announcement' | t }}"
            aria-controls="Slider-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
        </div>
      </slideshow-component>
      {%- if request.design_mode -%}
        <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
        <style>
          /* theme editor power preview fix */
          .announcement-bar-slider .slider__slide[aria-hidden='true'] {
            visibility: hidden;
          }
        </style>
      {%- endif -%}
    {%- endif -%}
    <div class="localization-wrapper">
      {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
        <localization-form class="small-hide medium-hide">
          {%- form 'localization', id: 'AnnouncementCountryForm', class: 'localization-form' -%}
            <div>
              <h2 class="visually-hidden" id="AnnouncementCountryLabel">{{ 'localization.country_label' | t }}</h2>
              {%- render 'country-localization', localPosition: 'AnnouncementCountry' -%}
            </div>
          {%- endform -%}
        </localization-form>
      {% endif %}

      {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
        <localization-form class="small-hide medium-hide">
          {%- form 'localization', id: 'AnnouncementLanguageForm', class: 'localization-form' -%}
            <div>
              <h2 class="visually-hidden" id="AnnouncementLanguageLabel">{{ 'localization.language_label' | t }}</h2>
              {%- render 'language-localization', localPosition: 'AnnouncementLanguage' -%}
            </div>
          {%- endform -%}
        </localization-form>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Announcement bar",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "announcement_text_1",
      "label": "Announcement text 1",
      "default": "Return extended to 60 days"
    },
    {
      "type": "text",
      "id": "announcement_text_2",
      "label": "Announcement text 2",
      "default": "Life-time Guarantees"
    },
    {
      "type": "text",
      "id": "announcement_text_3",
      "label": "Announcement text 3",
      "default": "Limited-Time Offer"
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Show social icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_language_selector",
      "label": "Show language selector",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_currency_selector",
      "label": "Show currency selector",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    }
  ],
  "presets": [
    {
      "name": "Announcement bar",
      "blocks": [
        {
          "type": "announcement"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="tf-topbar bg-dark-5 topbar-bg">
  <div class="container">
    <div class="topbar-wraper">
      {%- if section.settings.show_social_icons and social_icons -%}
        <div class="d-none d-xl-block flex-shrink-0">
          <ul class="tf-social-icon topbar-left">
            {%- if settings.social_facebook_link != blank -%}
              <li><a href="{{ settings.social_facebook_link }}" class="social-item social-facebook"><i class="icon icon-fb"></i></a></li>
            {%- endif -%}
            {%- if settings.social_instagram_link != blank -%}
              <li><a href="{{ settings.social_instagram_link }}" class="social-item social-instagram"><i class="icon icon-instagram"></i></a></li>
            {%- endif -%}
            {%- if settings.social_twitter_link != blank -%}
              <li><a href="{{ settings.social_twitter_link }}" class="social-item social-x"><i class="icon icon-x"></i></a></li>
            {%- endif -%}
            {%- if settings.social_snapchat_link != blank -%}
              <li><a href="{{ settings.social_snapchat_link }}" class="social-item social-snapchat"><i class="icon icon-snapchat"></i></a></li>
            {%- endif -%}
          </ul>
        </div>
      {%- endif -%}

      <div class="overflow-hidden">
        <div class="topbar-center marquee-wrapper">
          <div class="initial-child-container">
            {%- if section.settings.announcement_text_1 != blank -%}
              <div class="marquee-child-item">
                <p>{{ section.settings.announcement_text_1 }}</p>
              </div>
              <div class="marquee-child-item"><span class="dot"></span></div>
            {%- endif -%}
            {%- if section.settings.announcement_text_2 != blank -%}
              <div class="marquee-child-item">
                <p>{{ section.settings.announcement_text_2 }}</p>
              </div>
              <div class="marquee-child-item"><span class="dot"></span></div>
            {%- endif -%}
            {%- if section.settings.announcement_text_3 != blank -%}
              <div class="marquee-child-item">
                <p>{{ section.settings.announcement_text_3 }}</p>
              </div>
              <div class="marquee-child-item"><span class="dot"></span></div>
            {%- endif -%}
          </div>
        </div>
      </div>

      <div class="d-none d-xl-block flex-shrink-0">
        <div class="topbar-right">
          {%- if section.settings.show_language_selector and localization.available_languages.size > 1 -%}
            <div class="tf-languages">
              <localization-form>
                {%- form 'localization', id: 'AnnouncementLanguageForm', class: 'localization-form' -%}
                  <select class="image-select center style-default type-languages" name="locale_code">
                    {%- for language in localization.available_languages -%}
                      <option value="{{ language.iso_code }}" {% if language.iso_code == localization.language.iso_code %}selected{% endif %}>
                        {{ language.endonym_name }}
                      </option>
                    {%- endfor -%}
                  </select>
                {%- endform -%}
              </localization-form>
            </div>
          {%- endif -%}
          {%- if section.settings.show_currency_selector and localization.available_countries.size > 1 -%}
            <div class="tf-currencies">
              <localization-form>
                {%- form 'localization', id: 'AnnouncementCountryForm', class: 'localization-form' -%}
                  <select class="image-select center style-default type-currencies" name="country_code">
                    {%- for country in localization.available_countries -%}
                      <option value="{{ country.iso_code }}" {% if country.iso_code == localization.country.iso_code %}selected{% endif %}>
                        {{ country.name }} ({{ country.currency.iso_code }} {{ country.currency.symbol }})
                      </option>
                    {%- endfor -%}
                  </select>
                {%- endform -%}
              </localization-form>
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
.tf-topbar {
  padding: 8px 0;
  background-color: rgb(var(--color-background));
}

.topbar-wraper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tf-social-icon {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
  gap: 15px;
}

.social-item {
  color: rgb(var(--color-foreground));
  text-decoration: none;
  transition: color 0.3s ease;
}

.social-item:hover {
  color: rgb(var(--color-button));
}

.marquee-wrapper {
  overflow: hidden;
  flex: 1;
  margin: 0 20px;
}

.initial-child-container {
  display: flex;
  animation: marquee 30s linear infinite;
}

.marquee-child-item {
  display: flex;
  align-items: center;
  white-space: nowrap;
  padding: 0 10px;
}

.marquee-child-item p {
  margin: 0;
  font-size: 14px;
}

.dot {
  width: 4px;
  height: 4px;
  background-color: rgb(var(--color-foreground));
  border-radius: 50%;
  margin: 0 10px;
}

.topbar-right {
  display: flex;
  align-items: center;
  gap: 20px;
}

.tf-languages,
.tf-currencies {
  position: relative;
}

.image-select {
  appearance: none;
  background: transparent;
  border: none;
  color: rgb(var(--color-foreground));
  font-size: 14px;
  padding: 5px 25px 5px 0;
  cursor: pointer;
}

.image-select:focus {
  outline: none;
}

@keyframes marquee {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

@media screen and (max-width: 1199px) {
  .d-none.d-xl-block {
    display: none !important;
  }
}
{% endstylesheet %}
