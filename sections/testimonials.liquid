{%- style -%}
  .section-{{ section.id }}-padding {
    padding: 80px 0;
  }

  .container {
    max-width: 1488px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .flat-title {
    text-align: center;
    margin-bottom: 60px;
  }

  .flat-title .title {
    font-size: 42px;
    font-weight: 500;
    margin: 0;
    color: var(--color-foreground);
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .wg-testimonial {
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid var(--color-border);
    background: var(--color-background);
    height: 100%;
    transition: all 0.3s ease;
  }

  .wg-testimonial:hover {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    transform: translateY(-5px);
  }

  .wg-testimonial .content-top {
    padding: 24px;
    display: grid;
    gap: 16px;
  }

  .wg-testimonial .box-author {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .wg-testimonial .name-author {
    font-size: 14px;
    font-weight: 500;
    margin: 0;
    color: var(--color-foreground);
  }

  .box-verified {
    display: flex;
    align-items: center;
    gap: 4px;
    color: var(--gradient-base-accent-1);
  }

  .box-verified .icon-verifi {
    font-size: 16px;
  }

  .box-verified .text-xs {
    font-size: 12px;
    font-style: italic;
    margin: 0;
  }

  .list-star-default {
    color: #ffd700;
    display: flex;
    gap: 2px;
  }

  .list-star-default .icon-star {
    font-size: 16px;
  }

  .text-review {
    font-size: 14px;
    line-height: 1.6;
    color: var(--color-foreground);
    margin: 0;
  }

  .br-line {
    width: 100%;
    height: 1px;
    background-color: var(--color-border);
    display: block;
  }

  .box-avt {
    padding: 24px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .box-avt .avatar {
    flex-shrink: 0;
    width: 64px;
    height: 64px;
    border-radius: 50%;
    overflow: hidden;
  }

  .box-avt .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .box-price {
    display: grid;
    gap: 4px;
  }

  .box-price .name-item {
    font-size: 12px;
    color: var(--color-foreground);
    margin: 0;
  }

  .box-price .link {
    font-weight: 500;
    color: var(--gradient-base-accent-1);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .box-price .link:hover {
    color: var(--color-foreground);
  }

  .box-price .price {
    font-size: 16px;
    font-weight: 500;
    color: var(--color-foreground);
    margin: 0;
  }

  .sw-dot-default {
    display: flex;
    justify-content: center;
    margin-top: 40px;
    gap: 8px;
  }

  .swiper-pagination-bullet {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--color-border);
    opacity: 0.5;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .swiper-pagination-bullet-active {
    opacity: 1;
    background: var(--gradient-base-accent-1);
    transform: scale(1.2);
  }

  @media screen and (max-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding: 60px 0;
    }

    .flat-title .title {
      font-size: 36px;
    }
  }

  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding: 40px 0;
    }

    .flat-title .title {
      font-size: 32px;
    }

    .wg-testimonial .content-top {
      padding: 20px;
    }

    .box-avt {
      padding: 20px;
    }
  }

  /* Animation classes */
  .wow {
    visibility: hidden;
  }

  .fadeInUp {
    animation: fadeInUp 0.8s ease both;
  }

  .fadeInLeft {
    animation: fadeInLeft 0.8s ease both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translate3d(0, 30px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translate3d(-30px, 0, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }
{%- endstyle -%}

<link rel="stylesheet" href="{{ 'swiper-bundle.min.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'icon-font.css' | asset_url }}">

<section class="section-{{ section.id }}-padding">
  <div class="container">
    <div class="flat-title wow fadeInUp">
      <h4 class="title">{{ section.settings.title }}</h4>
    </div>

    <div dir="ltr" class="swiper tf-swiper" data-swiper='{
      "slidesPerView": 3,
      "spaceBetween": 24,
      "speed": 800,
      "observer": true,
      "observeParents": true,
      "slidesPerGroup": 1,
      "pagination": { "el": ".sw-pagination-tes", "clickable": true },
      "breakpoints": {
        "320": { "slidesPerView": 1, "spaceBetween": 12, "slidesPerGroup": 1 },
        "768": { "slidesPerView": 2, "spaceBetween": 24, "slidesPerGroup": 2 },
        "1200": { "slidesPerView": 3, "spaceBetween": 24, "slidesPerGroup": 3 }
      }
    }'>
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="wg-testimonial wow fadeInLeft" data-wow-delay="{{ forloop.index0 | times: 0.1 }}s">
              <div class="content">
                <div class="content-top">
                  <div class="box-author">
                    <p class="name-author text-sm fw-medium">{{ block.settings.author }}</p>
                    <div class="box-verified text-main">
                      <i class="icon-verifi"></i>
                      <p class="text-xs">Verified Buyer</p>
                    </div>
                  </div>
                  <div class="list-star-default">
                    {%- for i in (1..block.settings.rating) -%}
                      <i class="icon-star"></i>
                    {%- endfor -%}
                  </div>
                  <p class="text-review text-sm text-main">{{ block.settings.text }}</p>
                </div>
                <span class="br-line"></span>
                {%- if block.settings.show_purchase -%}
                  <div class="box-avt">
                    {%- if block.settings.author_image -%}
                      <div class="avatar">
                        {{ block.settings.author_image | image_url: width: 128 | image_tag }}
                      </div>
                    {%- endif -%}
                    <div class="box-price">
                      <p class="name-item text-xs">
                        Item purchased: 
                        {%- if block.settings.product != blank -%}
                          <a href="{{ block.settings.product.url }}" class="fw-medium text-sm link text-line-clamp-1">{{ block.settings.product.title }}</a>
                        {%- endif -%}
                      </p>
                      {%- if block.settings.product != blank -%}
                        <p class="price text-md fw-medium">{{ block.settings.product.price | money }}</p>
                      {%- endif -%}
                    </div>
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
      <span class="sw-dot-default sw-pagination-tes"></span>
    </div>
  </div>
</section>

<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>
<script src="{{ 'wow.min.js' | asset_url }}" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize Swiper
    const swipers = document.querySelectorAll('.tf-swiper');
    swipers.forEach(element => {
      const options = JSON.parse(element.dataset.swiper);
      new Swiper(element, options);
    });

    // Initialize WOW.js
    new WOW().init();
  });
</script>

