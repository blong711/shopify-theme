{%- style -%}
.testimonials {
  padding: var(--vineta-section-spacing-desktop) 0;
  overflow: hidden;
  background-color: var(--vineta-bg);
}

.testimonials .container {
  max-width: var(--container-max-width);
  margin: 0 auto;
  padding: 0 15px;
  width: 100%;
}

.testimonials .flat-title {
  text-align: center;
  margin-bottom: 60px;
}

.testimonials .flat-title .title {
  font-size: 42px;
  font-weight: 500;
  margin: 0;
  color: var(--vineta-dark);
  line-height: 1.2;
  letter-spacing: -0.02em;
}

.testimonials .swiper {
  margin: 0 auto;
  padding: 0;
  overflow: visible;
  width: 100%;
}

.testimonials .swiper-wrapper {
  display: flex;
  align-items: stretch;
  margin: 0 -12px;
}

.testimonials .swiper-slide {
  height: auto;
  display: flex;
}

.wg-testimonial {
  width: 100%;
  padding: 30px;
  background: var(--vineta-bg);
  border-radius: 8px;
  box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
}

.wg-testimonial .content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.wg-testimonial .content-top {
  flex-grow: 1;
}

.wg-testimonial .box-author {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 15px;
}

.wg-testimonial .name-author {
  font-size: 14px;
  font-weight: 500;
  color: var(--vineta-dark);
  margin: 0;
}

.wg-testimonial .box-verified {
  display: flex;
  align-items: center;
  gap: 5px;
  color: var(--vineta-primary);
}

.wg-testimonial .box-verified i {
  font-size: 16px;
}

.wg-testimonial .box-verified p {
  font-size: 12px;
  margin: 0;
}

.wg-testimonial .list-star-default {
  display: flex;
  gap: 5px;
  margin-bottom: 15px;
  color: #FFB800;
}

.wg-testimonial .list-star-default i {
  font-size: 16px;
}

.wg-testimonial .text-review {
  font-size: 14px;
  line-height: 1.6;
  color: var(--vineta-text);
  margin-bottom: 20px;
}

.wg-testimonial .br-line {
  width: 100%;
  height: 1px;
  background: var(--vineta-line);
  margin: 20px 0;
}

.wg-testimonial .box-avt {
  display: flex;
  align-items: center;
  gap: 15px;
}

.wg-testimonial .avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
}

.wg-testimonial .avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.wg-testimonial .box-price {
  flex-grow: 1;
}

.wg-testimonial .name-item {
  font-size: 12px;
  color: var(--vineta-text);
  margin: 0 0 5px;
}

.wg-testimonial .name-item .link {
  color: var(--vineta-dark);
  text-decoration: none;
}

.wg-testimonial .name-item .link:hover {
  color: var(--vineta-primary);
}

.wg-testimonial .price {
  font-size: 16px;
  font-weight: 500;
  color: var(--vineta-dark);
  margin: 0;
}

.sw-pagination-tes {
  margin-top: 30px;
}

.sw-pagination-tes .swiper-pagination-bullet {
  width: 10px;
  height: 10px;
  background: var(--vineta-light-gray);
  opacity: 1;
  transition: all 0.3s ease;
}

.sw-pagination-tes .swiper-pagination-bullet-active {
  background: var(--vineta-dark);
}

@media screen and (max-width: 1200px) {
  .testimonials .flat-title .title {
    font-size: 36px;
  }
}

@media screen and (max-width: 991px) {
  .testimonials {
    padding: var(--vineta-section-spacing-tablet) 0;
  }
  
  .testimonials .flat-title .title {
    font-size: 32px;
  }
}

@media screen and (max-width: 767px) {
  .testimonials {
    padding: var(--vineta-section-spacing-mobile) 0;
  }
  
  .testimonials .flat-title .title {
    font-size: 28px;
  }
  
  .wg-testimonial {
    padding: 20px;
  }
}
{%- endstyle -%}

<section class="testimonials">
  <div class="container">
    <div class="flat-title wow fadeInUp">
      <h4 class="title">{{ section.settings.title }}</h4>
    </div>
    <div dir="ltr" class="swiper tf-swiper wow fadeInUp" data-swiper='{
      "slidesPerView": 1,
      "spaceBetween": 12,
      "speed": 800,
      "observer": true,
      "observeParents": true,
      "slidesPerGroup": 1,
      "pagination": { "el": ".sw-pagination-tes", "clickable": true },
      "breakpoints": {
        "768": { "slidesPerView": 2, "spaceBetween": 24, "slidesPerGroup": 2 },
        "1200": { "slidesPerView": 3, "spaceBetween": 24, "slidesPerGroup": 3}
      }
    }'>
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="wg-testimonial wow fadeInLeft" {% if forloop.index > 1 %}data-wow-delay="{{ forloop.index | minus: 1 | times: 0.1 }}s"{% endif %}>
              <div class="content">
                <div class="content-top">
                  <div class="box-author">
                    <p class="name-author">{{ block.settings.author_name }}</p>
                    <div class="box-verified">
                      <i class="icon-verifi"></i>
                      <p>Verified Buyer</p>
                    </div>
                  </div>
                  <div class="list-star-default">
                    <i class="icon-star"></i>
                    <i class="icon-star"></i>
                    <i class="icon-star"></i>
                    <i class="icon-star"></i>
                    <i class="icon-star"></i>
                  </div>
                  <p class="text-review">{{ block.settings.quote }}</p>
                </div>
                <span class="br-line"></span>
                <div class="box-avt">
                  <div class="avatar">
                    <img
                      src="{{ block.settings.author_image | img_url: '100x' }}"
                      alt="{{ block.settings.author_name }}"
                      loading="lazy"
                      width="100"
                      height="100"
                    >
                  </div>
                  <div class="box-price">
                    <p class="name-item">
                      Item purchased: <a href="{{ block.settings.product_url }}" class="link">{{ block.settings.product_name }}</a>
                    </p>
                    <p class="price">{{ block.settings.product_price }}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <span class="sw-dot-default sw-pagination-tes justify-content-center"></span>
    </div>
  </div>
</section>

