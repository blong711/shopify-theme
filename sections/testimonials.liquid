{%- style -%}
.testimonials {
  padding: var(--vineta-section-spacing-desktop) 0;
  overflow: hidden;
  background-color: var(--vineta-bg);
}

.testimonials .container {
  max-width: var(--container-max-width);
  margin: 0 auto;
  padding: 0 15px;
}

.testimonials .vineta-section-header {
  margin-bottom: 40px;
  text-align: center;
}

.testimonials .vineta-section-header__title {
  font-size: 24px;
  font-weight: 500;
  margin-bottom: 0;
  color: var(--vineta-dark);
}

.testimonials .swiper {
  margin: 0 -12px;
  padding: 0 12px;
}

.testimonials .swiper-wrapper {
  display: flex;
  justify-content: center;
  align-items: stretch;
}

.testimonials .swiper-slide {
  height: auto;
  display: flex;
  justify-content: center;
}

.vineta-testimonial-card {
  position: relative;
  margin-bottom: 30px;
  width: 100%;
  max-width: 600px;
  background-color: var(--vineta-bg);
  border-radius: 8px;
  overflow: hidden;
  transition: all 0.3s ease;
  padding: 40px;
  text-align: center;
}

.vineta-testimonial-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--vineta-shadow-lg);
}

.vineta-testimonial-card__quote {
  position: relative;
  font-size: 24px;
  font-weight: 500;
  color: var(--vineta-dark);
  margin-bottom: 30px;
  line-height: 1.5;
}

.vineta-testimonial-card__quote::before {
  content: '"';
  position: absolute;
  top: -20px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 60px;
  color: var(--vineta-primary);
  opacity: 0.2;
}

.vineta-testimonial-card__author {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  margin-top: 30px;
}

.vineta-testimonial-card__avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}

.vineta-testimonial-card__avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.vineta-testimonial-card__info {
  text-align: left;
}

.vineta-testimonial-card__name {
  font-size: 18px;
  font-weight: 500;
  color: var(--vineta-dark);
  margin-bottom: 5px;
}

.vineta-testimonial-card__position {
  font-size: 14px;
  color: var(--vineta-gray);
}

.swiper-button-next,
.swiper-button-prev {
  width: 50px;
  height: 50px;
  background: var(--vineta-bg);
  border-radius: 50%;
  box-shadow: var(--vineta-shadow-md);
  color: var(--vineta-dark);
  transition: all 0.3s ease;
}

.swiper-button-next:hover,
.swiper-button-prev:hover {
  background: var(--vineta-dark);
  color: var(--vineta-bg);
}

.sw-pagination-testimonials {
  margin-top: 30px;
}

.sw-pagination-testimonials .swiper-pagination-bullet {
  width: 10px;
  height: 10px;
  background: var(--vineta-light-gray);
  opacity: 1;
  transition: all 0.3s ease;
}

.sw-pagination-testimonials .swiper-pagination-bullet-active {
  background: var(--vineta-dark);
}

@media screen and (max-width: 991px) {
  .testimonials {
    padding: var(--vineta-section-spacing-tablet) 0;
  }
  
  .vineta-testimonial-card {
    padding: 30px;
  }
  
  .vineta-testimonial-card__quote {
    font-size: 20px;
  }
}

@media screen and (max-width: 767px) {
  .testimonials {
    padding: var(--vineta-section-spacing-mobile) 0;
  }
  
  .vineta-testimonial-card {
    padding: 20px;
  }
  
  .vineta-testimonial-card__quote {
    font-size: 18px;
  }
}
{%- endstyle -%}

<section class="testimonials">
  <div class="container">
    <div class="vineta-section-header wow fadeInUp">
      <h4 class="vineta-section-header__title">{{ section.settings.title }}</h4>
    </div>
    <div class="fl-control-sw2 pos2 wow fadeInUp">
      <div class="swiper swiper-testimonials">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="vineta-testimonial-card">
                <div class="vineta-testimonial-card__quote">
                  {{ block.settings.quote }}
                </div>
                <div class="vineta-testimonial-card__author">
                  {% if block.settings.author_image != blank %}
                    <div class="vineta-testimonial-card__avatar">
                      <img
                        src="{{ block.settings.author_image | img_url: '120x' }}"
                        alt="{{ block.settings.author_name }}"
                        loading="lazy"
                        width="120"
                        height="120"
                      >
                    </div>
                  {% endif %}
                  <div class="vineta-testimonial-card__info">
                    <h5 class="vineta-testimonial-card__name">{{ block.settings.author_name }}</h5>
                    <span class="vineta-testimonial-card__position">{{ block.settings.author_position }}</span>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination sw-pagination-testimonials"></div>
      </div>
    </div>
  </div>
</section>

