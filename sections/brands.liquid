{%- style -%}
/* Root variables for consistent styling */
:root {
  --primary: #2d54a3;
  --secondary: #666666;
  --text: #666666;
  --dark: #0d0d0d;
  --white: #ffffff;
  --line: rgba(0, 0, 0, 0.1);
}

/* Brands styles */
.brands {
  padding: var(--vineta-section-spacing-desktop) 0;
  overflow: hidden;
  background-color: var(--vineta-bg);
}

.brands .container {
  max-width: var(--container-max-width);
  margin: 0 auto;
  padding: 0 15px;
}

.brands .vineta-section-header {
  margin-bottom: 40px;
  text-align: center;
}

.brands .vineta-section-header__title {
  font-size: 24px;
  font-weight: 500;
  margin-bottom: 0;
  color: var(--vineta-dark);
}

.brands .swiper {
  margin: 0 -12px;
  padding: 0 12px;
}

.brands .swiper-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

.brands .swiper-slide {
  height: auto;
  display: flex;
  justify-content: center;
}

.vineta-brand-card {
  position: relative;
  margin-bottom: 30px;
  width: 100%;
  max-width: 200px;
  background-color: var(--vineta-bg);
  border-radius: 8px;
  overflow: hidden;
  transition: all 0.3s ease;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vineta-brand-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--vineta-shadow-lg);
}

.vineta-brand-card__image {
  position: relative;
  display: block;
  width: 100%;
  height: auto;
  opacity: 0.7;
  transition: all 0.3s ease;
}

.vineta-brand-card:hover .vineta-brand-card__image {
  opacity: 1;
}

.swiper-button-next,
.swiper-button-prev {
  width: 50px;
  height: 50px;
  background: var(--vineta-bg);
  border-radius: 50%;
  box-shadow: var(--vineta-shadow-md);
  color: var(--vineta-dark);
  transition: all 0.3s ease;
}

.swiper-button-next:hover,
.swiper-button-prev:hover {
  background: var(--vineta-dark);
  color: var(--vineta-bg);
}

.sw-pagination-brands {
  margin-top: 30px;
}

.sw-pagination-brands .swiper-pagination-bullet {
  width: 10px;
  height: 10px;
  background: var(--vineta-light-gray);
  opacity: 1;
  transition: all 0.3s ease;
}

.sw-pagination-brands .swiper-pagination-bullet-active {
  background: var(--vineta-dark);
}

@media screen and (max-width: 991px) {
  .brands {
    padding: var(--vineta-section-spacing-tablet) 0;
  }
}

@media screen and (max-width: 767px) {
  .brands {
    padding: var(--vineta-section-spacing-mobile) 0;
  }
}

.section-{{ section.id }}-padding {
  padding: 40px 0;
}

.container {
  max-width: 1488px;
  margin: 0 auto;
  padding: 0 15px;
}

.flat-title {
  text-align: center;
  margin-bottom: 60px;
}

.flat-title .title {
  font-size: 42px;
  font-weight: 500;
  margin: 0;
  color: var(--color-foreground);
  line-height: 1.2;
  letter-spacing: -0.02em;
}

.flat-title .subtitle {
  font-size: 16px;
  line-height: 1.6;
  color: var(--color-foreground);
  margin: 16px auto 0;
  max-width: 600px;
}

.brand-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px 30px;
}

.brand-item img {
  max-width: 100%;
  height: auto;
  opacity: 0.5;
  transition: opacity 0.3s ease;
}

.brand-item:hover img {
  opacity: 1;
}

@media screen and (max-width: 767px) {
  .brand-item {
    padding: 10px 20px;
  }
}
{%- endstyle -%}

<link rel="stylesheet" href="{{ 'swiper-bundle.min.css' | asset_url }}">

<section class="brands">
  <div class="container">
    <div class="vineta-section-header wow fadeInUp">
      <h4 class="vineta-section-header__title">{{ section.settings.title }}</h4>
    </div>
    <div class="fl-control-sw2 pos2 wow fadeInUp">
      <div class="swiper swiper-brands">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="vineta-brand-card">
                <a href="{{ block.settings.brand_url }}" class="vineta-brand-card__image" target="_blank" rel="noopener">
                  <img
                    src="{{ block.settings.brand_logo | img_url: '200x' }}"
                    alt="{{ block.settings.brand_name }}"
                    class="vineta-brand-card__img"
                    loading="lazy"
                    width="200"
                    height="100"
                  >
                </a>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination sw-pagination-brands"></div>
      </div>
    </div>
  </div>
</section>

<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>
<script src="{{ 'wow.min.js' | asset_url }}" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize Swiper
    const swipers = document.querySelectorAll('.tf-swiper');
    swipers.forEach(element => {
      const options = JSON.parse(element.dataset.swiper);
      new Swiper(element, options);
    });

    // Initialize WOW.js
    new WOW().init();
  });
</script>

<script src="{{ 'infinityslide.js' | asset_url }}" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize infiniteslide
    $('.infiniteslide').infiniteslide();
  });
</script>

