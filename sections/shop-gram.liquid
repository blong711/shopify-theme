{%- style -%}
.shop-gram {
  padding: var(--vineta-section-spacing-desktop) 0;
  overflow: hidden;
  background-color: var(--vineta-bg);
}

.shop-gram .container {
  max-width: var(--container-max-width);
  margin: 0 auto;
  padding: 0 15px;
  width: 100%;
}

.shop-gram .vineta-section-header {
  margin-bottom: 40px;
  text-align: center;
}

.shop-gram .vineta-section-header__title {
  font-size: 42px;
  font-weight: 500;
  margin: 0;
  color: var(--vineta-dark);
  line-height: 1.2;
  letter-spacing: -0.02em;
}

.shop-gram .swiper {
  margin: 0 auto;
  padding: 0;
  overflow: visible;
  width: 100%;
}

.shop-gram .swiper-wrapper {
  display: flex;
  align-items: stretch;
  justify-content: center;
  margin: 0 -12px;
}

.shop-gram .swiper-slide {
  height: auto;
  display: flex;
  justify-content: center;
  flex: 0 0 calc(25% - 24px);
  margin: 0 12px;
}

.vineta-gram-card {
  position: relative;
  width: 100%;
  background-color: var(--vineta-bg);
  border-radius: 8px;
  overflow: hidden;
  transition: all 0.3s ease;
}

.vineta-gram-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--vineta-shadow-lg);
}

.vineta-gram-card__image {
  position: relative;
  display: block;
  overflow: hidden;
  padding-bottom: 100%;
}

.vineta-gram-card__img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.6s ease;
}

.vineta-gram-card:hover .vineta-gram-card__img {
  transform: scale(1.1);
}

.vineta-gram-card__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--vineta-overlay);
  opacity: 0;
  transition: all 0.3s ease;
}

.vineta-gram-card:hover .vineta-gram-card__overlay {
  opacity: 1;
}

.vineta-gram-card__content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20px;
  text-align: center;
  color: var(--vineta-bg);
  transform: translateY(20px);
  transition: all 0.3s ease;
}

.vineta-gram-card:hover .vineta-gram-card__content {
  transform: translateY(0);
}

.vineta-gram-card__title {
  font-size: 18px;
  font-weight: 500;
  margin-bottom: 5px;
}

.vineta-gram-card__subtitle {
  font-size: 14px;
  opacity: 0.8;
}

.swiper-button-next,
.swiper-button-prev {
  width: 50px;
  height: 50px;
  background: var(--vineta-bg);
  border-radius: 50%;
  box-shadow: var(--vineta-shadow-md);
  color: var(--vineta-dark);
  transition: all 0.3s ease;
}

.swiper-button-next:hover,
.swiper-button-prev:hover {
  background: var(--vineta-dark);
  color: var(--vineta-bg);
}

.sw-pagination-gram {
  margin-top: 30px;
}

.sw-pagination-gram .swiper-pagination-bullet {
  width: 10px;
  height: 10px;
  background: var(--vineta-light-gray);
  opacity: 1;
  transition: all 0.3s ease;
}

.sw-pagination-gram .swiper-pagination-bullet-active {
  background: var(--vineta-dark);
}

@media screen and (max-width: 1200px) {
  .shop-gram .swiper-slide {
    flex: 0 0 calc(33.333% - 24px);
  }
}

@media screen and (max-width: 991px) {
  .shop-gram {
    padding: var(--vineta-section-spacing-tablet) 0;
  }
  
  .shop-gram .vineta-section-header__title {
    font-size: 36px;
  }
  
  .shop-gram .swiper-slide {
    flex: 0 0 calc(50% - 12px);
    margin: 0 6px;
  }
}

@media screen and (max-width: 767px) {
  .shop-gram {
    padding: var(--vineta-section-spacing-mobile) 0;
  }
  
  .shop-gram .vineta-section-header__title {
    font-size: 32px;
  }
  
  .shop-gram .swiper-slide {
    flex: 0 0 calc(100% - 24px);
    margin: 0 12px;
  }
}
{%- endstyle -%}

<section class="shop-gram">
  <div class="container">
    <div class="vineta-section-header wow fadeInUp">
      <h4 class="vineta-section-header__title">{{ section.settings.title }}</h4>
    </div>
    <div class="fl-control-sw2 pos2 wow fadeInUp">
      <div dir="ltr" class="swiper tf-swiper hover-sw-nav wow fadeInUp" data-swiper='{
        "slidesPerView": "auto",
        "centeredSlides": true,
        "spaceBetween": 24,
        "speed": 800,
        "observer": true,
        "observeParents": true,
        "navigation": {
          "clickable": true,
          "nextEl": ".nav-next-gram",
          "prevEl": ".nav-prev-gram"
        },
        "pagination": { "el": ".sw-pagination-gram", "clickable": true },
        "breakpoints": {
          "320": { "slidesPerView": 1, "spaceBetween": 12, "centeredSlides": true },
          "575": { "slidesPerView": 2, "spaceBetween": 12, "centeredSlides": false },
          "768": { "slidesPerView": 3, "spaceBetween": 24, "centeredSlides": false },
          "1200": { "slidesPerView": 4, "spaceBetween": 24, "centeredSlides": false }
        }
      }'>
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="vineta-gram-card">
                <a href="{{ block.settings.instagram_url }}" class="vineta-gram-card__image" target="_blank" rel="noopener">
                  <img
                    src="{{ block.settings.image | img_url: '600x' }}"
                    alt="{{ block.settings.title }}"
                    class="vineta-gram-card__img"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                  <div class="vineta-gram-card__overlay"></div>
                </a>
                <div class="vineta-gram-card__content">
                  <h5 class="vineta-gram-card__title">{{ block.settings.title }}</h5>
                  <span class="vineta-gram-card__subtitle">{{ block.settings.subtitle }}</span>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="d-flex d-xl-none sw-dot-default sw-pagination-gram justify-content-center"></div>
        <div class="d-none d-xl-flex swiper-button-next nav-swiper nav-next-gram"></div>
        <div class="d-none d-xl-flex swiper-button-prev nav-swiper nav-prev-gram"></div>
      </div>
    </div>
  </div>
</section>

