{%- style -%}
.flat-spacing-4 {
  padding: 80px 0;
}

.pt-0 {
  padding-top: 0;
}

.flat-title {
  text-align: center;
  margin-bottom: 40px;
}

.flat-title .title {
  font-size: 36px;
  margin-bottom: 10px;
}

.flat-title .subtitle {
  font-size: 16px;
  color: var(--color-foreground-50);
}

.shop-gram-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
}

@media screen and (min-width: 768px) {
  .shop-gram-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media screen and (min-width: 1200px) {
  .shop-gram-grid {
    grid-template-columns: repeat(5, 1fr);
  }
}

.shop-gram-item {
  position: relative;
  padding-bottom: 100%;
  overflow: hidden;
}

.shop-gram-item img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.shop-gram-item:hover img {
  transform: scale(1.1);
}

.shop-gram-link {
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
}
{%- endstyle -%}

<section class="flat-spacing-4 pt-0">
  <div class="container">
    <div class="flat-title">
      <h4 class="title">{{ section.settings.title }}</h4>
      {%- if section.settings.subtitle != blank -%}
        <div class="subtitle">{{ section.settings.subtitle }}</div>
      {%- endif -%}
    </div>

    <div class="shop-gram-grid">
      {%- for block in section.blocks -%}
        <div class="shop-gram-item" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link }}" class="shop-gram-link">
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 400 | image_tag:
                loading: 'lazy',
                width: 400,
                height: 400,
                alt: block.settings.image.alt | escape
              }}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Shop Instagram",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shop by @Gram"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Follow us @yourstore"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Instagram Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "default": ""
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop Instagram",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %} 