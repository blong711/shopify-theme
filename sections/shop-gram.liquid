{%- style -%}
  .section-{{ section.id }}-padding {
    padding: 80px 0 0;
  }

  .container {
    max-width: 1488px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .flat-title {
    text-align: center;
    margin-bottom: 40px;
  }

  .flat-title .title {
    font-size: 42px;
    font-weight: 500;
    margin: 0;
    color: var(--color-foreground);
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
  }

  .image.img-style {
    position: relative;
    padding-bottom: 100%;
    overflow: hidden;
  }

  .image.img-style img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .image.img-style img {
    transform: scale(1.1);
  }

  .box-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 44px;
    height: 44px;
    background: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s ease;
    z-index: 2;
  }

  .box-icon .icon {
    color: var(--gradient-base-accent-1);
    font-size: 18px;
  }

  .box-icon .tooltip {
    position: absolute;
    bottom: -30px;
    left: 50%;
    transform: translateX(-50%);
    background: #fff;
    color: var(--gradient-base-accent-1);
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 12px;
    white-space: nowrap;
    opacity: 0;
    transition: all 0.3s ease;
  }

  .hover-overlay::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    opacity: 0;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .gallery-item:hover .box-icon,
  .gallery-item:hover::before {
    opacity: 1;
  }

  .gallery-item:hover .box-icon .tooltip {
    opacity: 1;
    bottom: -40px;
  }

  .sw-dot-default {
    display: flex;
    justify-content: center;
    margin-top: 30px;
    gap: 8px;
  }

  .swiper-pagination-bullet {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--color-border);
    opacity: 0.5;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .swiper-pagination-bullet-active {
    opacity: 1;
    background: var(--gradient-base-accent-1);
    transform: scale(1.2);
  }

  @media screen and (max-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding: 60px 0 0;
    }

    .flat-title .title {
      font-size: 36px;
    }
  }

  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding: 40px 0 0;
    }

    .flat-title .title {
      font-size: 32px;
    }
  }
{%- endstyle -%}

<link rel="stylesheet" href="{{ 'swiper-bundle.min.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'icon-font.css' | asset_url }}">

<section class="section-{{ section.id }}-padding">
  <div class="container">
    <div class="flat-title wow fadeInUp">
      <h4 class="title">{{ section.settings.title }}</h4>
    </div>

    <div dir="ltr" class="swiper tf-swiper" data-swiper='{
      "slidesPerView": 2,
      "spaceBetween": 24,
      "speed": 800,
      "observer": true,
      "observeParents": true,
      "slidesPerGroup": 1,
      "pagination": { "el": ".sw-pagination-gallery", "clickable": true },
      "breakpoints": {
        "320": { "slidesPerView": 2, "spaceBetween": 24 },
        "768": { "slidesPerView": 3, "spaceBetween": 24 },
        "1200": { "slidesPerView": 5, "spaceBetween": 24 }
      }
    }'>
      <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
          <div class="swiper-slide" {{ block.shopify_attributes }}>
            <div class="gallery-item hover-img hover-overlay wow fadeInLeft" data-wow-delay="{{ forloop.index0 | times: 0.1 }}s">
              <div class="image img-style">
                {%- if block.settings.image != blank -%}
                  {{ block.settings.image | image_url: width: 400 | image_tag:
                    loading: 'lazy',
                    class: 'lazyload'
                  }}
                {%- endif -%}
              </div>
              {%- if block.settings.product != blank -%}
                <a href="{{ block.settings.product.url }}" class="box-icon hover-tooltip">
                  <span class="icon icon-cart2"></span>
                  <span class="tooltip">View Product</span>
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
      <span class="sw-dot-default sw-pagination-gallery"></span>
    </div>
  </div>
</section>

<script src="{{ 'vineta-jquery.min.js' | asset_url }}" defer></script>
<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>
<script src="{{ 'wow.min.js' | asset_url }}" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Wait for jQuery to load
    var checkJquery = setInterval(function() {
      if (window.jQuery) {
        clearInterval(checkJquery);
        
        // Initialize Swiper
        $('.tf-swiper').each(function() {
          const options = $(this).data('swiper');
          new Swiper(this, options);
        });

        // Initialize WOW.js
        new WOW().init();
      }
    }, 100);
  });
</script>

