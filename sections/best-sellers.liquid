{%- style -%}
.best-sellers {
  padding: var(--vineta-section-spacing-desktop) 0;
  overflow: hidden;
  background-color: var(--vineta-bg);
}

.best-sellers .container {
  max-width: var(--container-max-width);
  margin: 0 auto;
  padding: 0 15px;
}

.best-sellers .vineta-section-header {
  margin-bottom: 40px;
  text-align: center;
}

.best-sellers .vineta-section-header__title {
  font-size: 24px;
  font-weight: 500;
  margin-bottom: 0;
  color: var(--vineta-dark);
}

.best-sellers .swiper {
  margin: 0 -12px;
  padding: 0 12px;
}

.best-sellers .swiper-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

.best-sellers .swiper-slide {
  height: auto;
  display: flex;
  justify-content: center;
}

.vineta-product-card {
  position: relative;
  margin-bottom: 30px;
  width: 100%;
  max-width: 300px;
  background-color: var(--vineta-bg);
}

.vineta-product-card__wrapper {
  position: relative;
}

.vineta-product-card__image {
  position: relative;
  display: block;
  overflow: hidden;
  border-radius: 8px;
}

.vineta-product-card__img,
.vineta-product-card__img-hover {
  width: 100%;
  height: auto;
  transition: transform 0.6s ease;
}

.vineta-product-card__img-hover {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.vineta-product-card__image:hover .vineta-product-card__img {
  opacity: 0;
}

.vineta-product-card__image:hover .vineta-product-card__img-hover {
  opacity: 1;
}

.vineta-product-card__actions {
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 2;
  margin: 0;
  padding: 0;
  list-style: none;
  opacity: 0;
  transform: translateX(20px);
  transition: all 0.3s ease;
}

.vineta-product-card:hover .vineta-product-card__actions {
  opacity: 1;
  transform: translateX(0);
}

.vineta-product-card__action-btn {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--vineta-bg);
  border-radius: 50%;
  margin-bottom: 10px;
  transition: all 0.3s ease;
  color: var(--vineta-dark);
}

.vineta-product-card__action-btn:hover {
  background: var(--vineta-dark);
  color: var(--vineta-bg);
}

.vineta-tooltip {
  position: relative;
}

.vineta-tooltip__text {
  position: absolute;
  left: -120px;
  top: 50%;
  transform: translateY(-50%);
  background: var(--vineta-dark);
  color: var(--vineta-bg);
  font-size: 12px;
  padding: 5px 10px;
  border-radius: 4px;
  white-space: nowrap;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.vineta-tooltip__text::after {
  content: '';
  position: absolute;
  right: -4px;
  top: 50%;
  transform: translateY(-50%);
  border-left: 4px solid var(--vineta-dark);
  border-top: 4px solid transparent;
  border-bottom: 4px solid transparent;
}

.vineta-tooltip:hover .vineta-tooltip__text {
  opacity: 1;
  visibility: visible;
  left: -100px;
}

.vineta-badge-container {
  position: absolute;
  top: 20px;
  left: 20px;
  z-index: 2;
}

.vineta-badge {
  display: inline-block;
  padding: 5px 12px;
  background: var(--vineta-dark);
  color: var(--vineta-bg);
  font-size: 12px;
  border-radius: 30px;
}

.vineta-product-card__content {
  padding: 20px 0;
  text-align: center;
}

.vineta-product-card__title {
  display: block;
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 10px;
  color: var(--vineta-dark);
  text-decoration: none;
}

.vineta-product-card__title:hover {
  color: var(--vineta-primary);
}

.vineta-product-card__price-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  margin: 0;
}

.vineta-product-card__price {
  color: var(--vineta-primary);
}

.vineta-product-card__compare-price {
  color: var(--vineta-gray);
  text-decoration: line-through;
}

.swiper-button-next,
.swiper-button-prev {
  width: 50px;
  height: 50px;
  background: var(--vineta-bg);
  border-radius: 50%;
  box-shadow: var(--vineta-shadow-md);
  color: var(--vineta-dark);
  transition: all 0.3s ease;
}

.swiper-button-next:hover,
.swiper-button-prev:hover {
  background: var(--vineta-dark);
  color: var(--vineta-bg);
}

.sw-pagination-seller {
  margin-top: 30px;
}

.sw-pagination-seller .swiper-pagination-bullet {
  width: 10px;
  height: 10px;
  background: var(--vineta-light-gray);
  opacity: 1;
  transition: all 0.3s ease;
}

.sw-pagination-seller .swiper-pagination-bullet-active {
  background: var(--vineta-dark);
}

@media screen and (max-width: 991px) {
  .best-sellers {
    padding: var(--vineta-section-spacing-tablet) 0;
  }
}

@media screen and (max-width: 767px) {
  .best-sellers {
    padding: var(--vineta-section-spacing-mobile) 0;
  }
}
{%- endstyle -%}

<section class="best-sellers">
  <div class="container">
    <div class="vineta-section-header wow fadeInUp">
      <h4 class="vineta-section-header__title">{{ section.settings.title }}</h4>
    </div>
    <div class="fl-control-sw2 pos2 wow fadeInUp">
      <div class="swiper swiper-seller">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="vineta-product-card">
                <div class="vineta-product-card__wrapper">
                  <a href="{{ block.settings.product_url }}" class="vineta-product-card__image">
                    <img
                      src="{{ block.settings.product_image | img_url: '600x' }}"
                      alt="{{ block.settings.title }}"
                      class="vineta-product-card__img"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                    {% if block.settings.hover_image != blank %}
                      <img
                        src="{{ block.settings.hover_image | img_url: '600x' }}"
                        alt="{{ block.settings.title }}"
                        class="vineta-product-card__img-hover"
                        loading="lazy"
                        width="600"
                        height="600"
                      >
                    {% endif %}
                  </a>

                  <ul class="vineta-product-card__actions">
                    <li>
                      <div class="vineta-tooltip">
                        <button class="vineta-product-card__action-btn">
                          <i class="icon-cart"></i>
                        </button>
                        <span class="vineta-tooltip__text">Add to Cart</span>
                      </div>
                    </li>
                    <li>
                      <div class="vineta-tooltip">
                        <button class="vineta-product-card__action-btn">
                          <i class="icon-heart"></i>
                        </button>
                        <span class="vineta-tooltip__text">Add to Wishlist</span>
                      </div>
                    </li>
                    <li>
                      <div class="vineta-tooltip">
                        <button class="vineta-product-card__action-btn">
                          <i class="icon-eye"></i>
                        </button>
                        <span class="vineta-tooltip__text">Quick View</span>
                      </div>
                    </li>
                    <li>
                      <div class="vineta-tooltip">
                        <button class="vineta-product-card__action-btn">
                          <i class="icon-compare"></i>
                        </button>
                        <span class="vineta-tooltip__text">Compare</span>
                      </div>
                    </li>
                  </ul>

                  {% if block.settings.badge_text != blank %}
                    <div class="vineta-badge-container">
                      <span class="vineta-badge">{{ block.settings.badge_text }}</span>
                    </div>
                  {% endif %}
                </div>

                <div class="vineta-product-card__content">
                  <a href="{{ block.settings.product_url }}" class="vineta-product-card__title">
                    {{ block.settings.title }}
                  </a>
                  <div class="vineta-product-card__price-wrap">
                    <span class="vineta-product-card__price">{{ block.settings.price }}</span>
                    {% if block.settings.compare_price != blank %}
                      <span class="vineta-product-card__compare-price">{{ block.settings.compare_price }}</span>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination sw-pagination-seller"></div>
      </div>
    </div>
  </div>
</section>

