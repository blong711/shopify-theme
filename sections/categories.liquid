{% schema %}
    {
      "name": "Categories",
      "settings": [
        {
          "type": "select",
          "id": "layout",
          "label": "Layout",
          "options": [
            {
              "value": "layout1",
              "label": "Tab Layout"
            },
            {
              "value": "electronic",
              "label": "Electronic Layout"
            }
          ],
          "default": "layout1"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Categories"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Categories"
        },
        {
          "type": "select",
          "id": "image_style",
          "label": "Image Style",
          "options": [
            {
              "value": "circle",
              "label": "Circle"
            },
            {
              "value": "square",
              "label": "Square"
            }
          ],
          "default": "circle"
        },
        {
          "type": "range",
          "id": "products_to_show",
          "min": 2,
          "max": 8,
          "step": 1,
          "label": "Products to show at once",
          "default": 6,
          "info": "Number of products visible in the slider at the same time"
        },
        {
          "type": "range",
          "id": "products_per_collection",
          "min": 3,
          "max": 12,
          "step": 1,
          "label": "Products per collection",
          "default": 6,
          "info": "Number of products to show from each collection"
        }
      ],
      "max_blocks": 12,
      "blocks": [
        {
          "type": "category",
          "name": "Category",
          "settings": [
            {
              "type": "collection",
              "id": "collection",
              "label": "Collection"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Categories",
          "settings": {
            "title": "Categories",
            "products_to_show": 6,
            "products_per_collection": 6,
            "layout": "layout1",
            "image_style": "circle"
          },
          "blocks": [
            {
              "type": "category"
            },
            {
              "type": "category"
            }
          ]
        }
      ]
    }
    {% endschema %}
    
    <!-- Categories -->
    <section class="flat-spacing-3">
      <div class="container">
        {% if section.settings.layout == 'layout1' %}
          <!-- Tab Layout -->
          <div class="flat-animate-tab">
            <div class="flat-title-tab-categories wow fadeInUp text-center">
              <h4 class="title">{{ section.settings.title }}</h4>
              {% if section.blocks.size > 0 %}
                <ul class="menu-tab-line justify-content-center" role="tablist">
                  {% for block in section.blocks %}
                    <li class="nav-tab-item" role="presentation" {{ block.shopify_attributes }}>
                      <a href="#collection-{{ block.id }}" class="tab-link {% if forloop.first %}active{% endif %}" data-bs-toggle="tab">
                        {{ collections[block.settings.collection].title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
            <div class="tab-content">
              {% for block in section.blocks %}
                <div class="tab-pane {% if forloop.first %}active show{% endif %}" id="collection-{{ block.id }}" role="tabpanel">
                  <div dir="ltr" class="swiper tf-swiper" 
                    data-swiper='{
                      "slidesPerView": 2,
                      "spaceBetween": 12,
                      "speed": 800,
                      "observer": true,
                      "observeParents": true,
                      "slidesPerGroup": 2,
                      "pagination": { 
                        "el": ".sw-pagination-{{ block.id }}", 
                        "clickable": true 
                      },
                      "breakpoints": {
                        "575": { 
                          "slidesPerView": 3, 
                          "spaceBetween": 12,
                          "slidesPerGroup": 2 
                        },    
                        "768": { 
                          "slidesPerView": 4, 
                          "spaceBetween": 24, 
                          "slidesPerGroup": 3 
                        },
                        "1200": { 
                          "slidesPerView": {{ section.settings.products_to_show }}, 
                          "spaceBetween": 64, 
                          "slidesPerGroup": {{ section.settings.products_to_show }}
                        }
                      }
                    }'>
                    <div class="swiper-wrapper">
                      {% for product in collections[block.settings.collection].products limit: section.settings.products_per_collection %}
                        <div class="swiper-slide">
                          <div class="wg-cls style-{{ section.settings.image_style }} hover-img">
                            <a href="{{ product.url }}" class="image img-style d-block">
                              {% if product.featured_image != blank %}
                                {{ product.featured_image | image_url: width: 300 | image_tag:
                                  loading: 'lazy',
                                  width: 300,
                                  height: 300,
                                  class: 'lazyload'
                                }}
                              {% else %}
                                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                              {% endif %}
                            </a>
                            <div class="cls-content text-center">
                              <a href="{{ product.url }}" class="link text-md fw-medium">{{ product.title }}</a>
                            </div>
                          </div>
                        </div>
                      {% endfor %}
                    </div>
                    <span class="d-flex d-xl-none sw-dot-default sw-pagination-{{ block.id }} justify-content-center"></span>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% else %}
          <!-- Electronic Layout: Show only collection image + title -->
          <div class="flat-title text-start wow fadeInUp">
            <h4 class="title">{{ section.settings.title }}</h4>
          </div>
          <div class="row g-4 mt-4">
            {% for block in section.blocks %}
              {% assign collection = collections[block.settings.collection] %}
              <div class="col-6 col-sm-4 col-md-3 col-lg-2 text-center">
                <a href="{{ collection.url }}" class="d-block">
                  <div class="image img-style style-{{ section.settings.image_style }}">
                    {% if collection.image != blank %}
                      {{ collection.image | image_url: width: 300 | image_tag:
                        loading: 'lazy',
                        width: 300,
                        height: 300,
                        class: 'lazyload'
                      }}
                    {% else %}
                      {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                  <div class="cls-content mt-2">
                    <span class="link text-md fw-medium d-block">{{ collection.title }}</span>
                  </div>
                </a>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </section>
    <!-- /Categories -->
    